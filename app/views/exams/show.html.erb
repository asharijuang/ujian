<p id="notice"><%= notice %></p>
<%= link_to 'Back', exams_path %>

<h4>
  <%= @exam.name %>
</h4>
<%= link_to 'Edit', edit_exam_path(@exam) %>


<div id="questions">
<% @questions.each do |question| %>
	<p><%= question.question %></p>
    <% # link_to 'Destroy', exam_question, method: :delete, data: { confirm: 'Are you sure?' } %>

    <div class="answers">
      <% question.answers.each do |q| %>
        <p> <%= q.name %> </p>
      <% end %>
    </div>

    <%= simple_form_for([@exam.questions, @answer], remote: true) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-inputs">
      answer
	    <%= f.input :name %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit %>
	  </div>
	<% end %>
  ------------------------------------------------
<% end %>
</div>

<%= simple_form_for([@exam, @question], remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :question %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>